                            <children>
                                <AnchorPane layoutY="9.6" prefHeight="38.0" prefWidth="221.0"
                                            style="-fx-background-color: linear-gradient(to bottom right, #189ba7, #306090);">
                                    <children>
                                        <Label layoutX="32.0" layoutY="11.0" text="Event Management System"
                                               textFill="WHITE">
                                            <font>
                                                <Font size="13.0"/>
                                            </font>
                                        </Label>
                                    </children>
                                </AnchorPane>
                                <Circle fill="DODGERBLUE" layoutX="1025.0" layoutY="23.0" radius="11.0" stroke="BLACK"
                                        strokeType="INSIDE"/>
