                                       style="-fx-font-weight: bold; -fx-font-size: 13px;"/>
                                <Label layoutX="235.2" layoutY="13.0" text="Dashboard From"
                                       style="-fx-font-size: 15px;"/>
                                <Label layoutX="860.0" layoutY="14.0" text="Welcome,"/>
                            </children>
                        </AnchorPane>
                    </top>

                    <!-- Sidebar Section -->
                    <left>
                        <AnchorPane prefHeight="558.0" prefWidth="221.0"
                                    style="-fx-background-color: linear-gradient(to bottom right, #189ba7, #306090);">
                            <children>
                                <Label layoutX="32.0" layoutY="84.0" text="User ID:" textFill="WHITE"/>
