           fx:controller="controllers.ShowEquipmentController">
    <children>
        <AnchorPane prefHeight="200.0" prefWidth="200.0">
            <children>
                <BorderPane layoutX="222.0" layoutY="116.0" prefHeight="600.0" prefWidth="1100.0"
