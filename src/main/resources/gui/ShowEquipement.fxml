                                <Label layoutX="12.0" layoutY="154.0" text="Feature" textFill="WHITE"/>
                                <Button layoutX="6.0" layoutY="182.0" prefHeight="38.0" prefWidth="206.0"
                                        text="Dashboard"
                                        style="-fx-background-color: transparent; -fx-border-color: white; -fx-text-fill: white;"/>
                                <Button layoutX="5.0" layoutY="228.0" prefHeight="36.0" prefWidth="208.0"
                                        text="Evenement"
                                        style="-fx-background-color: transparent; -fx-border-color: white; -fx-text-fill: white;"/>
