                        </AnchorPane>
                    </left>

                    <!-- Center Section (TableView) -->
                    <center>
                        <AnchorPane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: white;">
                            <children>
                                <TableView fx:id="tableViewEquipment" layoutX="20" layoutY="20" prefWidth="650"
                                           prefHeight="400">
                                    <columns>
                                        <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                                        <TableColumn fx:id="colName" text="Name" prefWidth="120"/>
                                        <TableColumn fx:id="colType" text="Type" prefWidth="120"/>
                                        <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>
                                        <TableColumn fx:id="colQuantity" text="Quantity" prefWidth="80"/>
                                        <TableColumn fx:id="colDescription" text="Description" prefWidth="200"/>
                                    </columns>
                                </TableView>
                                <!-- Add, Update, Delete Buttons without Icons -->
                                <Button layoutX="700" layoutY="50" text="Add"
                                        style="-fx-background-color: #189ba7; -fx-text-fill: white;"
                                        onAction="#AddEquipement" prefWidth="120" prefHeight="40"/>

                                <Button layoutX="700" layoutY="100" text="Update"
                                        style="-fx-background-color: #189ba7; -fx-text-fill: white;"
